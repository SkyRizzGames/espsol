# ESPSOL Quickstart Example Configuration

# WiFi Configuration
CONFIG_EXAMPLE_WIFI_SSID="YourWiFiSSID"
CONFIG_EXAMPLE_WIFI_PASSWORD="YourWiFiPassword"

# ESPSOL Configuration
CONFIG_ESPSOL_ENABLED=y
CONFIG_ESPSOL_DEFAULT_RPC_ENDPOINT="https://api.devnet.solana.com"
CONFIG_ESPSOL_DEFAULT_COMMITMENT_CONFIRMED=y
CONFIG_ESPSOL_RPC_TIMEOUT_MS=30000
CONFIG_ESPSOL_RPC_RETRY_COUNT=3
CONFIG_ESPSOL_RPC_BUFFER_SIZE=4096
CONFIG_ESPSOL_MAX_TX_SIZE=1232
CONFIG_ESPSOL_MAX_ACCOUNTS=20
CONFIG_ESPSOL_MAX_INSTRUCTIONS=10
CONFIG_ESPSOL_ENABLE_NVS_ENCRYPTION=y
CONFIG_ESPSOL_ENABLE_TASK_SAFE=y
CONFIG_ESPSOL_ENABLE_SPL_TOKENS=y
CONFIG_ESPSOL_LOG_LEVEL=3
CONFIG_ESPSOL_ENABLE_ASSERT=y
CONFIG_ESPSOL_OTA_SAFE=y
